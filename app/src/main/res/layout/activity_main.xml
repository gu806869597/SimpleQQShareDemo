<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cc.jimblog.simpleqqsharedemo.MainActivity">
    <TextView
        android:id="@+id/nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="昵称"/>
    <ImageView
        android:id="@+id/headimage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/nickname"
        android:layout_marginTop="5dp"
        android:src="@mipmap/ic_launcher"/>
    <Button
        android:id="@+id/login_to_qq"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/headimage"
        android:layout_marginTop="10dp"
        android:text="登陆到QQ"/>
    <Button
        android:id="@+id/logOut_to_qq"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/login_to_qq"
        android:layout_marginTop="10dp"
        android:text="退出登陆"/>
    <Button
        android:id="@+id/share_to_qq"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/logOut_to_qq"
        android:layout_marginTop="10dp"
        android:text="分享到QQ"/>
    <Button
        android:id="@+id/share_to_qzone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/share_to_qq"
        android:layout_marginTop="10dp"
        android:text="分享到空间"/>
</RelativeLayout>
